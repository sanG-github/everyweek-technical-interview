<div class="bg-white border border-gray-200 rounded-lg p-4 mb-4">
  <h3 class="text-lg font-medium text-gray-800 mb-2">Rate Limit Status</h3>
  
  <div class="flex items-center justify-between mb-2">
    <span class="text-sm text-gray-600">Requests this minute:</span>
    <span class="font-medium <%= count >= limit ? 'text-red-600' : 'text-green-600' %>">
      <%= count %> / <%= limit %>
    </span>
  </div>

  <div class="w-full bg-gray-200 rounded-full h-2.5">
    <div class="bg-blue-600 h-2.5 rounded-full" style="width: <%= (count.to_f / limit * 100).to_i %>%"></div>
  </div>
  
  <% if count >= limit %>
    <p class="mt-2 text-sm text-red-600">
      Rate limit exceeded. Resets in <%= reset_time %> seconds.
    </p>
  <% else %>
    <p class="mt-2 text-sm text-gray-600">
      Limit resets in <%= reset_time %> seconds.
    </p>
  <% end %>
</div> 