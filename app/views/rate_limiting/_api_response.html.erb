<div class="bg-white border border-gray-200 rounded-lg p-4">
  <h3 class="text-lg font-medium text-gray-800 mb-2">API Response</h3>
  
  <% if success %>
    <div class="bg-green-100 border border-green-200 text-green-700 px-4 py-3 rounded mb-4">
      <p class="font-medium">Request successful</p>
      <p class="text-sm">Your request was processed successfully.</p>
    </div>
  <% else %>
    <div class="bg-red-100 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
      <p class="font-medium">Rate limit exceeded</p>
      <p class="text-sm">You've exceeded the rate limit of <%= limit %> requests per minute.</p>
      <p class="text-sm mt-2">Please try again after the limit resets.</p>
    </div>
  <% end %>
  
  <div class="mt-4">
    <h4 class="text-md font-medium text-gray-700 mb-2">Response Headers</h4>
    <div class="bg-gray-100 p-3 rounded font-mono text-sm overflow-x-auto">
      <p>X-RateLimit-Limit: <%= limit %></p>
      <p>X-RateLimit-Remaining: <%= remaining %></p>
      <p>X-RateLimit-Reset: <%= reset_time %> seconds</p>
    </div>
  </div>
</div> 